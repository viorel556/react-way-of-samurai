{
  "compilerOptions": {
    "strict": false, // TOGGLE THIS IF YA WANT TO DEBUG TILL MIDNIGHT AND BEYOND :D =)
    "jsx": "react",
    "module": "commonjs",
    "target": "es5",
    "sourceMap": true,
    "esModuleInterop": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "plugins": [{ "name": "typescript-plugin-css-modules" }]
  },

  "exclude": ["node_modules"],

  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.css",
    "src/**/*.js",
    "src/**/*.jsx"
  ],

}